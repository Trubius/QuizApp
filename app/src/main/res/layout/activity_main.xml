<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_margin"
            android:text="@string/music_quiz"
            android:textColor="@android:color/black"
            android:textSize="@dimen/title_text_size" />

        <EditText
            android:id="@+id/name_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_margin"
            android:hint="@string/write_your_name_here"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="@dimen/question_text_size" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_question1"
            style="@style/CardTheme"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_padding"
            card_view:contentPadding="@dimen/card_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question1"
                    style="@style/QuestionTheme"
                    android:text="1. Which town was Mozart born?" />

                <View style="@style/GreyLine" />

                <RadioGroup
                    android:id="@+id/q1_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/q1_a1_radiobutton"
                        style="@style/AnswerTheme"
                        android:text="Vienna" />

                    <RadioButton
                        android:id="@+id/q1_a2_radiobutton"
                        style="@style/AnswerTheme"
                        android:text="Salzburg" />

                    <RadioButton
                        android:id="@+id/q1_a3_radiobutton"
                        style="@style/AnswerTheme"
                        android:text="Graz" />

                    <RadioButton
                        android:id="@+id/q1_a4_radiobutton"
                        style="@style/AnswerTheme"
                        android:text="Berlin" />
                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_question2"
            style="@style/CardTheme"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_padding"
            card_view:contentPadding="@dimen/card_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/question2"
                    style="@style/QuestionTheme"
                    android:text="2. Do you recognize this opera? Hit play and guess which one is it." />


                <View style="@style/GreyLine" />

                <RadioGroup
                    android:id="@+id/q2_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/q2_a1_radiobutton"
                        style="@style/AnswerTheme"
                        android:text="The Marrige of Figaro" />

                    <RadioButton
                        android:id="@+id/q2_a2_radiobutton"
                        style="@style/AnswerTheme"
                        android:text="Rigoletto" />


                    <RadioButton
                        android:id="@+id/q2_a3_radiobutton"
                        style="@style/AnswerTheme"
                        android:text="Carmen" />

                    <RadioButton
                        android:id="@+id/q2_a4_radiobutton"
                        style="@style/AnswerTheme"
                        android:text="The Magic Flute" />
                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_question3"
            style="@style/CardTheme"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_padding"
            card_view:contentPadding="@dimen/card_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/question3"
                    style="@style/QuestionTheme"
                    android:text="3. Which piece of music(s) has Beethoven composed?" />


                <View style="@style/GreyLine" />


                <CheckBox
                    android:id="@+id/q3_a1_checkbox"
                    style="@style/AnswerTheme"
                    android:text="Moonlight Sonata" />

                <CheckBox
                    android:id="@+id/q3_a2_checkbox"
                    style="@style/AnswerTheme"
                    android:text="Ode to Joy" />


                <CheckBox
                    android:id="@+id/q3_a3_checkbox"
                    style="@style/AnswerTheme"
                    android:text="The Trout" />

                <CheckBox
                    android:id="@+id/q3_a4_checkbox"
                    style="@style/AnswerTheme"
                    android:text="Fidelio" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_question4"
            style="@style/CardTheme"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_padding"
            card_view:contentPadding="@dimen/card_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question4"
                    style="@style/QuestionTheme"
                    android:text="@string/question_4" />

                <View style="@style/GreyLine" />

                <RadioGroup
                    android:id="@+id/q4_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/q4_a1_radiobutton"
                        style="@style/AnswerTheme"
                        android:text="Chopin" />

                    <RadioButton
                        android:id="@+id/q4_a2_radiobutton"
                        style="@style/AnswerTheme"
                        android:text="Schubert" />

                    <RadioButton
                        android:id="@+id/q4_a3_radiobutton"
                        style="@style/AnswerTheme"
                        android:text="Johann Strauss I" />

                    <RadioButton
                        android:id="@+id/q4_a4_radiobutton"
                        style="@style/AnswerTheme"
                        android:text="Johann Strauss II" />
                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_question5"
            style="@style/CardTheme"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_padding"
            card_view:contentPadding="@dimen/card_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/question5"
                    style="@style/QuestionTheme"
                    android:text="5. How many Chopin nocturnes has been made?" />


                <View style="@style/GreyLine" />


                <EditText
                    android:id="@+id/q5_a1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:hint="Write your answer here"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/question_text_size" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_question6"
            style="@style/CardTheme"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_padding"
            card_view:contentPadding="@dimen/card_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="submitAnswer"
                    android:text="Submit" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
